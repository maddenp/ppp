BIN=a.out
EXT=$(suffix $(TEST))
FC=gfortran
FFLAGS=
PPP=../../ppp
STEM=$(basename $(TEST))
TARGETS=bin clean control translation
TEST=$(wildcard t.f t.f90)
TRANSLATION=$(STEM)_ppp$(EXT)

.PHONY: control

default:
	$(error Valid targets are: $(TARGETS))

bin: $(BIN)

clean:
	$(RM) $(TRANSLATION) $(BIN)

control: $(TEST)
	$(FC) $(FFLAGS) $^ && a.out > control && $(RM) a.out

translation: $(TRANSLATION)

$(BIN): $(TRANSLATION)
	$(FC) $(FFLAGS) $(TRANSLATION)

$(TRANSLATION): $(TEST)
	$(PPP) $(TEST) > $(TRANSLATION)
